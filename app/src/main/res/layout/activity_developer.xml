<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sql.DeveloperActivity">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Developers"
        android:id="@+id/developers"
        android:textSize="40dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:autoText="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backabout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:background="#01579B"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/profile"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/developers"
        android:layout_alignLeft="@+id/backabout"
        android:layout_alignStart="@+id/backabout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="REHMI NEJIB"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="najib.rahmi.dev@gmail.com"
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/imageView"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Description"
        android:id="@+id/description"
        android:layout_marginTop="150dp"
        android:textSize="40dp"
       android:layout_below="@+id/developers"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:autoText="true" />
    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:textSize="20sp"
        android:text="Train your brain in our general knowledge quiz :\n\n
        -a relaxing game which is also a source of valuable and little-known information \n\n
        -a great opportunity to challenge your friends and other players for highest ranks \n\n
        -delightful learning experience whether you know the answers or not \n\n
        -a game to help you fall asleep or to start your day with \n\n
        -detailed explanation for every question \n"
        ></TextView>





</RelativeLayout>
